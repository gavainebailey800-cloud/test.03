<div class="container">
    <h1>üíó A Question for You üíó</h1>
    <img src="https://images.pexels.com/photos/414612/pexels-photo-414612.jpeg" alt="Flowers" title="Flowers">
    <img src="https://images.pexels.com/photos/461198/pexels-photo-461198.jpeg" alt="Jello" title="Jello">
    <div id="question">Will you be my Valentine?</div>
    <button onclick="handleYes()">Yes</button>
    <button onclick="handleNo()">No</button>
    <div id="response"></div>
</div>

<script>
let noCount = 0;
let yesConfirmed = false;

function handleYes() {
    if (!yesConfirmed) {
        document.getElementById("question").innerText = "Are you sure?";
        document.getElementById("response").innerHTML = "";
        yesConfirmed = true;
    } else {
        document.getElementById("question").innerText = "üíñ Yay! So happy!";
        document.getElementById("response").innerHTML = "<p class='note'>You're great and this made my day!</p>";
    }
}

function handleNo() {
    noCount++;
    if (noCount <= 4) {
        document.getElementById("question").innerText = "Are you sure? (It‚Äôs okay to tell me why!)";
        let whyInput = "<br><input id='why' placeholder='Tell me why...' style='padding:8px; margin-top:10px; width:80%; border-radius:6px; border:1px solid #ddd;'>"
                     + "<br><button onclick='submitWhy()'>Submit</button>";
        document.getElementById("response").innerHTML = whyInput;
    } else {
        document.getElementById("question").innerText = "I understand. Thank you for being honest üòä";
        document.getElementById("response").innerHTML = "";
    }
}

function submitWhy() {
    const whyText = document.getElementById("why").value;
    document.getElementById("response").innerHTML = "<p class='note'>Thanks for sharing: ‚Äú" + whyText + "‚Äù</p>";
}
</script>
